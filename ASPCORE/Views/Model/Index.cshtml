@*@model IEnumerable<ASPCORE.Models.Model>*@
@model cloudscribe.Pagination.Models.PagedResult<Model>

@{
    ViewData["Title"] = "Index";
    ViewData["Controller"] = "Model";
    ViewData["Action"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />

@if (ViewBag.success != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <h4> <strong>HI!</strong> Successfully created your Bike Model</h4>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
    <div class="container bg-light shadow-lg">
        <form method="get" asp-action="Index">
            <div class="row bg-info">
                <div class="col-md-12">

                    <table class="col-md-12">
                        <tr>
                            <td><input type="text" class="form-control" required="" name="searchString" value="@ViewBag.CurrentSearch" placeholder="Search with make name" /></td>
                            <td>
                                <input type="submit" value="SEARCH" class="btn btn-success"  style="font-size:12px; margin-right:-30px;"/>
                            </td>
                            <td>
                                <a asp-action="Index" class="btn btn-danger" style="font-size:12px;">CLEAR</a>
                            </td>
                            <td>
                                <a class="btn btn-info" asp-action="CreateModel"><i class="fas fa-motorcycle"></i> &nbsp; Add Bikes Model</a>
                            </td>

                        </tr>
                    </table>

        
    </div>
        </div>
        <br />

        @*Table*@
       
            <div class="row">
                <div class="col-12">
                    <table class="table table-striped border" id="modeltable">
                        <tr class="table-info">
                            <th>
                                <a asp-action="Index" asp-route-sortOrder="@ViewBag.modalParam" asp-route-pageNumber="@Model.PageNumber">Make Name</a>
                            </th>
                            <th>
                                Name of the Model
                            </th>
                            <th class="text-right">Actions</th>
                        </tr>
                        @foreach (var item in Model.Data)
                        {
                            <tr>
                                <td>@Html.DisplayFor(m => item.Make.Name)</td>
                                <td>@Html.DisplayFor(m => item.Name)</td>
                                <partial name="_EditDeleteTablePartial" model="item.Id" />
                            </tr>
                        }
                    </table>
                    <partial name="_paginationPartial" view-data="ViewData" model="Model" />
                </div>
            </div>
      </form>
    </div>



