@*@model IEnumerable<ASPCORE.Models.Model>*@
@model cloudscribe.Pagination.Models.PagedResult<Model>

@{
    ViewData["Title"] = "Index";
    ViewData["Controller"] = "Model";
    ViewData["Action"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<br /><br />
<div class="row">
    <div class="col-md-6">
        <h2 class="text-info">Models of Vehicles</h2>
    </div>

    <div class="col-md-6 text-right">
        <a class="btn btn-info" asp-action="CreateModel"><i class="fas fa-motorcycle"></i> &nbsp; Add Bikes Model</a>
    </div>

    <br />

    <div class="col-12">
        <table class="table table-striped border">
            <tr class="table-info">
                <th>Make Name</th>
                <th>Name of the Model</th>
                <th class="text-right">Actions</th>
            </tr>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@Html.DisplayFor(m => item.Make.Name)</td>
                    <td>@Html.DisplayFor(m => item.Name)</td>
                    <partial name="_EditDeleteTablePartial" model="item.Id" />
                </tr>
            }
        </table>
        <partial name="_paginationPartial" view-data="ViewData" model="Model" />            
    </div>
</div>



